{% extends '@Administration/Default/index_administration.html.twig' %}
{% block contenu %}


    <section class="content-header">
        <h1>
            Gerer les statistiques
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('homepage') }}"><i class="fa fa-dashboard"></i> Acceuil</a></li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-success">
                    <div class="box-header">
                        <h3 class="box-title">Creation d'une statistique</h3>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-sm-12">
                                {{ form_start(form) }}
                                <div class="form-row">
                                    <div class="col-md-12 mb-12">
                                        {{ form_label(form.title, 'Titre') }}
                                        {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
                                    </div>
                                </div>

                                <div class="form-row">

                                    <div class="col-md-12 mb-12">
                                        <br>
                                        {{ form_label(form.demandeur, 'Demandeur') }}
                                        {{ form_widget(form.demandeur, { 'attr': {'class': 'form-control'} }) }}
                                    </div>
                                </div>
                                <div class="row text-center">
                                    <div class="col-md-12">
                                        <br/>
                                        <input class="btn btn-primary btn-lg" type="submit" value="Valider" />
                                    </div>
                                </div>
                                {{ form_row(form._token) }}
                                {{ form_end(form, {'render_rest': false}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
