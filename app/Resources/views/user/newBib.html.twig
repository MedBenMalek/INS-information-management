{% extends ':parent:base.html.twig' %}
{% block title %}Ajouter Utilisateur{% endblock %}

{% block body %}
    <div class="page-wrapper">
        <div class="page-breadcrumb border-bottom">
            <div class="row">
                <div class="col-lg-3 col-md-4 col-xs-12 align-self-center">
                    <h5 class="font-medium text-uppercase mb-0">Ajouter Utilisateur</h5>
                </div>
                <div class="col-lg-9 col-md-8 col-xs-12 align-self-center">
                    <nav aria-label="breadcrumb" class="mt-2 float-md-right float-left">
                        <ol class="breadcrumb mb-0 justify-content-end p-0">
                            <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Ajouter Utilisateur</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Ajouter un utilisateur</h4>
                    {{ form_start(form) }}
                    <div class="form-row">
                        <div class="col-md-3 mb-3">
                            {{ form_label(form.lastname, 'Nom') }}
                            {{ form_widget(form.lastname, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col-md-3 mb-3">
                            {{ form_label(form.username, 'Username') }}
                            {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col-md-3 mb-3">
                            {{ form_label(form.firstname, 'Prenom') }}
                            {{ form_widget(form.firstname, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col-md-3 mb-3">
                            {{ form_label(form.email, 'Email') }}
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupPrepend">@</span>
                                </div>
                                {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            {{ form_label(form.phone, 'Numero de telephone') }}
                            {{ form_widget(form.phone, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col-md-4 mb-3">
                            {{ form_label(form.address, 'Adresse') }}
                            {{ form_widget(form.address, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col-md-4 mb-3">
                            {{ form_label(form.zipCode, 'ZIP code') }}
                            {{ form_widget(form.zipCode, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6 mb-6">
                            {{ form_label(form.plainPassword.first, 'mot de passe') }}
                            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="col-md-6 mb-6">
                            {{ form_label(form.plainPassword.second, 'confirmer') }}
                            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <br/>
                    <div class="form-row">
                        <div class="col-md-12 mb-12">
                            {{ form_label(form.description, 'Description') }}
                            {{ form_widget(form.description, { 'attr': {'class': 'form-control','cols': '30','rows': '8' } }) }}
                        </div>
                    </div>
                    <div class="row text-center">
                        <div class="col-md-12">
                            <br/>
                            <button class="btn btn-primary btn-lg" type="submit">Valider</button>
                        </div>
                    </div>

                    {{ form_row(form._token) }}
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
