{% extends 'parent/base.html.twig' %}
{% block title %}Tableau de bord{% endblock %}
{% block body %}
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb border-bottom">
            <div class="row">
                <div class="col-lg-3 col-md-4 col-xs-12 align-self-center">
                    <h5 class="font-medium text-uppercase mb-0">Tableau de bord</h5>
                </div>
                <div class="col-lg-9 col-md-8 col-xs-12 align-self-center">
                    <nav aria-label="breadcrumb" class="mt-2 float-md-right float-left">
                        <ol class="breadcrumb mb-0 justify-content-end p-0">
                            <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Tableau de bord</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="page-content container-fluid">
            <!-- ============================================================== -->
            <!-- Card Group  -->
            <!-- ============================================================== -->
            <div class="card-group">
                <div class="card p-2 p-lg-3">
                    <div class="p-lg-3 p-2">
                        <div class="d-flex align-items-center">
                            <button class="btn btn-circle btn-danger text-white btn-lg" href="javascript:void(0)">
                                <i class="ti-agenda"></i>
                            </button>
                            <div class="ml-4" style="width: 38%;">
                                <h4 class="font-light">nombre des actualités</h4>
                                <div class="progress">
                                    <div class="progress-bar bg-danger" role="progressbar" style="width: {{ posts|length  }}%"
                                         aria-valuenow="{{ posts|length  }}" aria-valuemin="0" aria-valuemax="0"></div>
                                </div>
                            </div>
                            <div class="ml-auto">
                                <h2 class="display-7 mb-0">{{ posts|length  }}</h2>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card p-2 p-lg-3">
                    <div class="p-lg-3 p-2">
                        <div class="d-flex align-items-center">
                            <button class="btn btn-circle btn-cyan text-white btn-lg" href="javascript:void(0)">
                                <i class="ti-receipt    "></i>
                            </button>
                            <div class="ml-4" style="width: 38%;">
                                <h4 class="font-light">nombre des demandes</h4>
                                <div class="progress">
                                    <div class="progress-bar bg-cyan" role="progressbar" style="width: {{ demandeur|length  }}%"
                                         aria-valuenow="{{ demandeur|length  }}" aria-valuemin="0" aria-valuemax="40"></div>
                                </div>
                            </div>
                            <div class="ml-auto">
                                <h2 class="display-7 mb-0">{{ demandeur|length  }}</h2>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card p-2 p-lg-3">
                    <div class="p-lg-3 p-2">
                        <div class="d-flex align-items-center">
                            <button class="btn btn-circle btn-warning text-white btn-lg" href="javascript:void(0)">
                                <i class="fas fa-newspaper"></i>
                            </button>
                            <div class="ml-4" style="width: 38%;">
                                <h4 class="font-light">nombre des abonnées dans Newsletter</h4>
                                <div class="progress">
                                    <div class="progress-bar bg-warning" role="progressbar" style="width: {{ news|length  }}%"
                                         aria-valuenow="{{ news|length  }}" aria-valuemin="0" aria-valuemax="40"></div>
                                </div>
                            </div>
                            <div class="ml-auto">
                                <h2 class="display-7 mb-0">{{ news|length  }}</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- footer -->
        <!-- ============================================================== -->
        <footer class="footer text-center">
            All Rights Reserved.
        </footer>
        <!-- ============================================================== -->
        <!-- End footer -->
        <!-- ============================================================== -->
    </div>
{% endblock %}