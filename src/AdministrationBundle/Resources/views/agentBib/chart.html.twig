{% extends ':parent:base.html.twig' %}
{% block title %}chart{% endblock %}

{% block body %}

    <div class="page-wrapper" style="display: block;">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb border-bottom">
            <div class="row">
                <div class="col-lg-3 col-md-4 col-xs-12 align-self-center">
                    <h5 class="font-medium text-uppercase mb-0">statistique de la demandeur {{ stat.demandeur.firstname }} {{ stat.demandeur.lastname }}</h5>
                </div>
                <div class="col-lg-9 col-md-8 col-xs-12 align-self-center">
                    <nav aria-label="breadcrumb" class="mt-2 float-md-right float-left">
                        <ol class="breadcrumb mb-0 justify-content-end p-0">
                            <li class="breadcrumb-item"><a href="index.html">Accueil</a></li>
                            <li class="breadcrumb-item active" aria-current="page">chart</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>

        <div class="page-content container-fluid">

            <div class="text-center" style="margin-bottom: 25px">
                <a href="{{ path('stat_pdf', { 'id': stat.id }) }}" class="btn btn-success">
                    <span class="text">Générer PDF</span>
                </a>
                <a href="{{ path('stat_new_chart', { 'id': stat.id }) }}" class="btn btn-success">
                    <span class="text">Ajouter chart</span>
                </a>
            </div>

            <div class="row el-element-overlay">

                {% for o,value in charts %}
                <div class="col-lg-6 col-md-6">
                    <div class="card">
                        <div class="el-card-item">
                            <div class="d-flex no-block align-items-center">
                                <div id="chartrun{{ value.id }}">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
                    <script src="http://code.highcharts.com/4.1.8/highcharts.js"></script>
                    <script src="http://code.highcharts.com/4.1.8/modules/exporting.js"></script>
                    <script type="text/javascript">
                        {{ chart(value.ob) }}
                    </script>
                {% endfor %}
            </div>
        </div>
    </div>


{% endblock %}


