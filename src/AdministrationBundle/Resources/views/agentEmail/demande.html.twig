<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Gestion demande
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Acceuil</a></li>
        <li><a href="#">Demande information</a></li>
        <li class="active">Gestion demande</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-success">
                <div class="box-header">
                    <h3 class="box-title">Demande une information</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="titre">Titre</label>
                                <input type="text" class="form-control" name="titre" id="titre"
                                       placeholder="Entrer titre">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="mode">Mode d'envoi</label>
                                <input type="text" class="form-control" name="mode" id="mode"
                                       placeholder="Entrer mode d'envoi">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="destination">Destination</label>
                                <input type="text" name="destination" id="destination" class="form-control"
                                       placeholder="Entrer destination">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Date:</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right" id="datepicker">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="direct">R&eacute;ponse direct</label>
                                <select name="direct" id="direct" class="form-control">
                                    <option value="oui">
                                        Oui
                                    </option>
                                    <option value="non">
                                        Non
                                    </option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" id="submitDemande" value="Valider"
                                   class="btn  btn-success btn-lg btn-block">
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

    {#result section#}
    <div class="row" id="result"></div>
</section>

<script>

    let code_html1 =
        `<div class="col-md-12">
            <div class="box box-warning">
                <div class="box-header">
                    <div class="box-title">Resultat de recherche01</div>
                </div>
                <div class="box-body">

                </div>
            </div>
        </div>`;

    let code_html2 =
        `<div class="col-md-12">
            <div class="box box-warning">
                <div class="box-header">
                    <div class="box-title">Resultat de recherche02</div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                               <label for="personne">Personne a contact&eacute;</label>
                               <select name="personne" id="personne" class="form-control">
                                    <option value="p1">
                                        nom - p1
                                    </option>
                                    <option value="p1">
                                        nom - p2
                                    </option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="text">Texte</label>
                                <textarea class="textarea" placeholder="Place some text here" id="text" name="text"
                                                  style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" id="submitDemande" value="Envoyer votre demande"
                                   class="btn  btn-primary btn-lg btn-block">
                        </div>
                    </div>
                </div>
            </div>
        </div>`;

    $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
        checkboxClass: 'icheckbox_flat-green'
        ,
        radioClass: 'iradio_flat-green'
    });
    $('#datepicker').datepicker({
        autoclose: true
    });

    $('#submitDemande').on('click', function () {
        $("#result").html('<center><img src="../Ipi/dist/img/ajax-loader.gif" ><br><b>Patientez...</b></center>');
        let value = $(direct).val();
        if (value === "oui") {
            $("#result").html(code_html1);
        } else {
            $("#result").html(code_html2);
        }
    });
</script>