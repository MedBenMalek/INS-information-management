<div class="login-box-body">
    <p class="login-box-msg">Veuillez saisir votre login et votre  mot de passe </p>
    {% if error %}
        <p style="color: #f00; text-align: center;">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
    {% endif %}
    <form class="form-horizontal mt-3" id="loginform"
          method="post" action="{{ path("fos_user_security_check") }}">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        {% endif %}
        <div class="form-group has-feedback">
            <input type="text" class="form-control form-control-lg" placeholder="Nom d'utilisateur" name="_username"
                   aria-label="Username" aria-describedby="basic-addon1" value="{{ last_username }}">
        </div>
        <div class="form-group has-feedback">
            <input type="password" class="form-control form-control-lg" placeholder="Mot de passe"
                   aria-label="Password" name="_password" aria-describedby="basic-addon1">
        </div>
        <div class="row">
            <div id="result" class="col-xs-8">

            </div><!-- /.col -->
            <div class="col-xs-4">
                <button type="submit" id="valider" class="btn btn-primary btn-block btn-flat">Valider</button>
            </div><!-- /.col -->
        </div>
    </form>

</div>
